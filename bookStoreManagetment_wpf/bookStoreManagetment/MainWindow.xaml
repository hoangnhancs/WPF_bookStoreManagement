<Window x:Class="bookStoreManagetment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookStoreManagetment"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource MainVM}" 
        Name="_MainWindow"
        Title="MainWindow" Height="700" Width="1200">


    <!--Resouces-->
    <Window.Resources>
        <ResourceDictionary Source="./styles/styleResources.xaml"></ResourceDictionary>
    </Window.Resources>

    <!--command-->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction 
                Command="{Binding LoadedMainWindowCommand}"
                CommandParameter="{Binding ElementName= _MainWindow}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding ChangeColorButtonClickCommand}"
                CommandParameter="{Binding ElementName= btnDashboard}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding AccountMainWindowCommand}"
                CommandParameter="{Binding ElementName= chipAccount}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding LoadedDashBoardCommand}"
                CommandParameter="{Binding ElementName=GridMainForm}">
            </i:InvokeCommandAction>
        </i:EventTrigger>

        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction 
                    Command="{Binding ClosedMainWindowCommand}"
                    />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <!--Main-->
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0" Background="{StaticResource VertihicalAquaLinearGradient}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Logo-->
            <Grid Grid.Column="0" 
                  Background="OrangeRed">
                <!-- Bỏ source ảnh vào đây-->
                <!--<Image x:Name="Logo" Source="myLogo.png" Stretch="Fill"></Image>-->
            </Grid>

            <!--sub header-->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Account-->
                <Grid Grid.Column="1">
                    <materialDesign:Chip
                        x:Name="chipAccount"
                        Width="auto"
                        Content="Tài Khoản"
                        Icon="T" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    />
                </Grid>
            </Grid>
        </Grid>

        <!--Main-->
        <Grid Grid.Row="1">
            <DockPanel>
                <Grid Width="40"
                      Background="{StaticResource HorizontalAquaLinearGradient}"
                      x:Name="gridSubMenu"
                      Visibility="Visible"
                      DockPanel.Dock="Left">
                    <StackPanel>
                        <Button Style="{StaticResource btnStyle_MenuFeatures}">
                            <materialDesign:PackIcon Kind="ArrowRight" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                            <!--ẩn hiện -->
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                    </i:InvokeCommandAction>
                                    <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        
                    </StackPanel>
                </Grid>
                <Grid Width="170"
                      x:Name="gridMenu"
                      Visibility="Collapsed"
                      DockPanel.Dock="Left">
                    <DockPanel
                    Background="{StaticResource HorizontalAquaLinearGradient}">
                        <!--Feature sub menu-->
                        <ScrollViewer
                                  Background="{StaticResource HorizontalAquaLinearGradient}"
                        x:Name="test_scv" 
                        VerticalScrollBarVisibility="Visible" 
                        HorizontalScrollBarVisibility="Hidden">
                            
                            <StackPanel x:Name="stackPanelFeatures"
                                        Margin="10 0 0 0"
                                        Background="Transparent">
                                <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                        Width="40"
                                        HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Kind="ArrowLeft" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                    <!--ẩn hiện -->
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                            </i:InvokeCommandAction>
                                            <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <!--dashboard-->
                                <StackPanel x:Name="stpDashBoard">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                        Command="{Binding ChangeColorButtonClickCommand}"
                                x:Name="btnDashboard"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Dashboard">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                        Command="{Binding DashBoardClickCommand}"
                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </StackPanel>

                                <!--quản lí vật phẩm-->
                                <StackPanel x:Name="stpQLVP">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                x:Name="btnQLVP"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản Lý Vật Phẩm">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                    Command="{Binding OpenSubMenuCommand}"
                                    CommandParameter="{Binding ElementName=subMenuQLVP}"/>
                                                <i:InvokeCommandAction
                                    Command="{Binding ChangeColorOpenedSTP}"
                                    CommandParameter="{Binding ElementName=btnQLVP}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </Button>

                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLVP" 
                                            HorizontalAlignment="Left"
                                            Margin="10 0 0 0"
                                            Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnDSSP"
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Danh sách sản phẩm"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnDSSP}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ListofProductsClickCommand}"
                                                CommandParameter="{Binding ElementName=GridMainForm}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                        x:Name="btnNhapHang"
                                        Command="{Binding ChangeColorButtonClickCommand}"
                                        CommandParameter="{Binding ElementName=btnNhapHang}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Nhập hàng">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                    Command="{Binding ImportGoodsClickCommand}"
                                                    CommandParameter="{Binding ElementName=GridMainForm}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                        x:Name="btnKiemHang"
                                        Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnKiemHang}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Kiểm hàng">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                            Command="{Binding KiemhangClickCommand}"
                                            CommandParameter="{Binding ElementName=GridMainForm}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                            
                                    x:Name="btnNhacungcap"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Nhà cung cấp"
                                    Command="{Binding NhacungcapClickCommand}"
                                    CommandParameter="{Binding ElementName=GridMainForm}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnNhacungcap}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--quản lí bán hàng-->
                                <StackPanel x:Name="stpQLBH">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                        x:Name="btnQLBH"
                                        Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Quản Lý Bán Hàng">
                                        <!--Tạo event click vô button mở submenu và đổi màu btn-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                Command="{Binding OpenSubMenuCommand}"
                                                CommandParameter="{Binding ElementName=subMenuQLBH}"/>
                                                <i:InvokeCommandAction
                                                    Command="{Binding ChangeColorOpenedSTP}"
                                                    CommandParameter="{Binding ElementName=btnQLBH}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--submenu-->
                                    <StackPanel x:Name="subMenuQLBH" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Danh sách hóa đơn"
                                            x:Name="btnDSHD"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnDSHD}"
                                            HorizontalAlignment="Left">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding DSHoaDonClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                            x:Name="btnKhachTraHang"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnKhachTraHang}"
                                        Content="Khách trả hàng"
                                            HorizontalAlignment="Left">
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--Quản lí khách hàng-->
                                <StackPanel x:Name="stpQLKH">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                x:Name="btnQLKH"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản lý khách hàng">
                                        <!--Tạo event click vô button mở submenu và đổi màu btn-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                        Command="{Binding OpenSubMenuCommand}"
                                        CommandParameter="{Binding ElementName=subMenuQLKH}"/>
                                                <i:InvokeCommandAction
                                        Command="{Binding ChangeColorOpenedSTP}"
                                        CommandParameter="{Binding ElementName=btnQLKH}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLKH" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnDSKH"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnDSKH}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Danh sách khách hàng">
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnNhomKH"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnNhomKH}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Nhóm khách hàng">
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--quản lí nhân viên-->
                                <StackPanel x:Name="stpQLNV">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                x:Name="btnQLNV"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản lý nhân viên">
                                        <!--Event button click open sub menu-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                        Command="{Binding OpenSubMenuCommand}"
                                        CommandParameter="{Binding ElementName=subMenuQLNV}"/>
                                                <i:InvokeCommandAction
                                        Command="{Binding ChangeColorOpenedSTP}"
                                        CommandParameter="{Binding ElementName=btnQLNV}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLNV" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnDSNV"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnDSNV}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Danh sách nhân viên">
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnPhanQuyen"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnPhanQuyen}"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Phân quyền">
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--Quản lí thu chi-->
                                <StackPanel x:Name="stpQLTC">
                                    <Button x:Name="btnQLTC" HorizontalAlignment="Left" FontWeight="SemiBold"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Quản lý thu chi">
                                        <!--Event button click open sub menu-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                            Command="{Binding OpenSubMenuCommand}"
                                            CommandParameter="{Binding ElementName=subMenuQLTC}"/>
                                                <i:InvokeCommandAction
                                            Command="{Binding ChangeColorOpenedSTP}"
                                            CommandParameter="{Binding ElementName=btnQLTC}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLTC" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                            x:Name="btnDSTC"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Content="Danh sách thu chi"
                                    Command="{Binding openDSThuChiUCCommand}"
                                    CommandParameter="{Binding ElementName=GridMainForm}">
                                            <!--Event button click open sub menu-->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnDSTC}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                    Command="{Binding openPhieuThuUCCommand}"
                                    CommandParameter="{Binding ElementName=GridMainForm}"
                                            x:Name="btnPhieuthu"
                                    Content="Phiếu thu">
                                            <!--Event button click open sub menu-->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnPhieuthu}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Phiếu chi"
                                            x:Name="btnPhieuChi"
                                            HorizontalAlignment="Left"
                                        Command="{Binding openPhieuChiUCCommand}"
                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                            <!--Event button click open sub menu-->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnPhieuChi}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <!--Sub menu-->
                                        <!--<StackPanel x:Name="subMenuQLTC2" Visibility="Collapsed">
                                        <Button 
                                        Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Danh sách thu chi">
                                        </Button>
                                        <Button 
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Phiếu thu">
                                        </Button>
                                        <Button 
                                                Style="{StaticResource btnStyle_MenuFeatures}"
                                                Content="Phiếu chi">
                                        </Button>
                                    </StackPanel>-->
                                    </StackPanel>

                                    <!--Quán lí báo cáo-->
                                    <StackPanel x:Name="stpQLRP">
                                        <Button HorizontalAlignment="Left" FontWeight="SemiBold"
                                            x:Name="btnQLReport"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnQLReport}"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản lý report">
                                        </Button>
                                    </StackPanel>

                                    <!--Quản lí sự kiện-->
                                    <StackPanel x:Name="stpQLSK">
                                        <Button HorizontalAlignment="Left" FontWeight="SemiBold"
                                            x:Name="btnQLSK"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnQLSK}"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản lý sự kiện">
                                        </Button>
                                    </StackPanel>

                                    <!--quản lí mail-->
                                    <StackPanel x:Name="stpQLMail">
                                        <Button HorizontalAlignment="Left" FontWeight="SemiBold"
                                    Style="{StaticResource btnStyle_MenuFeatures}"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnQLMail}"
                                    Content="Quản lý Mail"
                                    x:Name="btnQLMail" Click="btnQLMail_Click">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorOpenedSTP}"
                                                CommandParameter="{Binding ElementName=btnQLMail}"/>
                                                    <i:InvokeCommandAction
                                                Command="{Binding QuanlyMailCommand}"
                                                CommandParameter="{Binding ElementName=GridMainForm}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </StackPanel>

                                    <!--quản lí cài đặt chung-->
                                    <StackPanel x:Name="stpCDC">
                                        <Button HorizontalAlignment="Left" FontWeight="SemiBold"
                                            x:Name="btnCDC"
                                        Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Cài đặt chung"
                                        Command="{Binding openCaiDatChungUCCommand}"
                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                            <!--Event button click open sub menu-->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnCDC}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
                <Grid DockPanel.Dock="Left">
                    <!--Main Form-->
                    <Grid 
                    x:Name="GridMainForm"
                    Background="AntiqueWhite"
                    HorizontalAlignment="Stretch">

                        <!--Features-->

                    </Grid>
                </Grid>
                <ContentControl
                Background="LightCyan"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"  
                Grid.Column="1"
                Grid.Row="1"               
                Content="{Binding SelectedViewModel}"></ContentControl>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
