<Window x:Class="bookStoreManagetment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookStoreManagetment"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#F2F7FA"
        Foreground="#FF495B67"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource MainVM}" 
        Name="_MainWindow"
        Title="HANI" Height="700" Width="1200" Icon="Logo Hani (1) (1).png">


    <!--Resouces-->
    <Window.Resources>
        <ResourceDictionary Source="./styles/styleResources.xaml"></ResourceDictionary>
    </Window.Resources>

    <!--command-->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction 
                Command="{Binding LoadedMainWindowCommand}"
                CommandParameter="{Binding ElementName= _MainWindow}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding ChangeColorButtonClickCommand}"
                CommandParameter="{Binding ElementName= btnDashboard}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding AccountMainWindowCommand}"
                CommandParameter="{Binding ElementName= chipAccount}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction 
                Command="{Binding LoadedDashBoardCommand}"
                CommandParameter="{Binding ElementName=GridMainForm}">
            </i:InvokeCommandAction>
            <i:InvokeCommandAction
                Command="{Binding ChangeColorButtonIconClickCommand}"
                CommandParameter="{Binding ElementName=btnIconDashboard}">
            </i:InvokeCommandAction>
        </i:EventTrigger>

        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction 
                    Command="{Binding ClosedMainWindowCommand}"
                    />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <!--Main-->
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Header-->
        <materialDesign:Card Grid.Row="0 " Background="#1E98D7">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"></ColumnDefinition>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Logo-->
                <Grid Grid.Column="0">
                    <Grid.Background>
                        <ImageBrush ImageSource="Logo Hani (1) (1).png" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <!-- Bỏ source ảnh vào đây-->
                    <!--<Image x:Name="Logo" Source="myLogo.png" Stretch="Fill"></Image>-->
                </Grid>

                <!--sub header-->
                <Grid Grid.Column="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Account-->
                    <Grid Grid.Column="1">
                        <materialDesign:Chip Background="White"
                                             IconBackground="#d78a1e"
                            x:Name="chipAccount"
                            Width="auto"
                            Content="Tài Khoản"
                            Icon="T" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding ShowHideLoginCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </materialDesign:Chip>
                    </Grid>
                </Grid>
            </Grid>
        </materialDesign:Card>


        <!--Main-->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch">
            <DockPanel>
                <Grid Width="40"
                      Background="Transparent"
                      x:Name="gridSubMenu"
                      Visibility="Visible"
                      DockPanel.Dock="Left">
                    <materialDesign:Card
                        materialDesign:ShadowAssist.ShadowEdges="Right">
                        <StackPanel>
                            <!--arrow-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}">
                                <materialDesign:PackIcon Kind="ArrowRight" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--chart-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnDashboard}"
                                x:Name="btnIconDashboard">
                                <materialDesign:PackIcon Kind="ChartBar" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                                        Command="{Binding DashBoardClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconDashboard}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--items-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconQLVP"
                                Command="{Binding ChangeColorOpenedSTP}"
                                CommandParameter="{Binding ElementName=btnQLVP}">
                                <materialDesign:PackIcon Kind="Book" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                    Command="{Binding OpenSubMenuCommand}"
                                    CommandParameter="{Binding ElementName=subMenuQLVP}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--sell-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                Command="{Binding ChangeColorOpenedSTP}"
                                CommandParameter="{Binding ElementName=btnQLBH}"
                                x:Name="btnIconQLBH">
                                <materialDesign:PackIcon Kind="Cart" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                                Command="{Binding OpenSubMenuCommand}"
                                                CommandParameter="{Binding ElementName=subMenuQLBH}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--customer-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconQLKH">
                                <materialDesign:PackIcon Kind="PeopleGroup" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLKH}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnDSKH}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                                        Command="{Binding openDSKhachHangUCCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--employee-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconQLNV"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnQLNV}">
                                <materialDesign:PackIcon Kind="PersonBadge" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                        CommandParameter="{Binding ElementName= btnIconQLNV}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding openDSNhanVienUCCommand}"
                                        CommandParameter="{Binding ElementName=GridMainForm}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--import export-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconQLTC"
                                Command="{Binding ChangeColorOpenedSTP}"
                                CommandParameter="{Binding ElementName=btnQLTC}">
                                <materialDesign:PackIcon Kind="ImportExport" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                            Command="{Binding OpenSubMenuCommand}"
                                            CommandParameter="{Binding ElementName=subMenuQLTC}"/>

                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--report--><!--
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconQLReport"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnQLReport}">
                                <materialDesign:PackIcon Kind="FileDocumentBox" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                --><!--ẩn hiện --><!--
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                        CommandParameter="{Binding ElementName=btnIconQLReport}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>-->

                            <!--event--><!--
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                 x:Name="btnIconQLSK"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnQLSK}">
                                <materialDesign:PackIcon Kind="Event" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                --><!--ẩn hiện --><!--
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                        CommandParameter="{Binding ElementName=btnIconQLSK}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>-->

                            <!--mail-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                 x:Name="btnIconQLMail"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnQLMail}">
                                <materialDesign:PackIcon Kind="Gmail" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                        CommandParameter="{Binding ElementName=btnIconQLMail}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                        Command="{Binding QuanlyMailCommand}"
                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <!--setting-->
                            <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                x:Name="btnIconCDC"
                                Command="{Binding ChangeColorButtonClickCommand}"
                                CommandParameter="{Binding ElementName=btnCDC}">
                                <materialDesign:PackIcon Kind="Settings" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                <!--ẩn hiện -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                        CommandParameter="{Binding ElementName=btnIconCDC}">
                                        </i:InvokeCommandAction>
                                        <i:InvokeCommandAction
                                            Command="{Binding openCaiDatChungUCCommand}"
                                            CommandParameter="{Binding ElementName=GridMainForm}">
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>

                </Grid>
                <Grid Width="175"
                      Background="#f8f7fc"
                      x:Name="gridMenu"
                      Visibility="Collapsed"
                      DockPanel.Dock="Left">
                    <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth5">
                        <!--Feature sub menu-->
                        <ScrollViewer
                            x:Name="test_scv" 
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Hidden">

                            <StackPanel x:Name="stackPanelFeatures"
                                        Margin="10 0 0 0"
                                        Background="Transparent">
                                <!--arrow-->
                                <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                        Width="40"
                                        HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Kind="ArrowLeft" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                 Width="36"
                                                 Height="36"/>
                                    <!--ẩn hiện -->
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridMenu}">
                                            </i:InvokeCommandAction>
                                            <i:InvokeCommandAction
                                        Command="{Binding ShowHideMenuCommand}"
                                        CommandParameter="{Binding ElementName= gridSubMenu}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <!--dashboard-->
                                <StackPanel x:Name="stpDashBoard">
                                    <Button HorizontalAlignment="Left"
                                            Width="145"
                                            HorizontalContentAlignment="Left"
                                            FontWeight="SemiBold"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            x:Name="btnDashboard"
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Dashboard" Click="btnDashboard_Click">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                    Command="{Binding DashBoardClickCommand}"
                                                    CommandParameter="{Binding ElementName=GridMainForm}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </StackPanel>

                                <!--quản lí vật phẩm-->
                                <StackPanel x:Name="stpQLVP">
                                    <Button HorizontalAlignment="Left"
                                        FontWeight="SemiBold"
                                             Width="145"
                                            HorizontalContentAlignment="Left"
                                x:Name="btnQLVP"
                                Style="{StaticResource btnStyle_MenuFeatures}"
                                Content="Quản Lý Vật Phẩm">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                    Command="{Binding OpenSubMenuCommand}"
                                    CommandParameter="{Binding ElementName=subMenuQLVP}"/>
                                                <i:InvokeCommandAction
                                    Command="{Binding ChangeColorOpenedSTP}"
                                    CommandParameter="{Binding ElementName=btnQLVP}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </Button>

                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLVP" 
                                            HorizontalAlignment="Left"
                                            Margin="10 0 0 0"
                                            Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                                 Width="135"
                                            HorizontalContentAlignment="Left"
                                            x:Name="btnDSSP"
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Danh sách sản phẩm"
                                                FontWeight="Medium"
                                            Command="{Binding ChangeColorButtonClickCommand}"
                                            CommandParameter="{Binding ElementName=btnDSSP}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ListofProductsClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLVP}">
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                                 Width="135"
                                                HorizontalContentAlignment="Left"
                                                x:Name="btnNhapHang"
                                                FontWeight="Medium"
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnNhapHang}"
                                                Style="{StaticResource btnStyle_MenuFeatures}"
                                                Content="Nhập hàng">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ImportGoodsClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLVP}">
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                                Width="135"
                                                HorizontalContentAlignment="Left"
                                                x:Name="btnKiemHang"
                                                FontWeight="Medium"
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnKiemHang}"
                                                Style="{StaticResource btnStyle_MenuFeatures}"
                                                Content="Kiểm hàng">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding KiemhangClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLVP}">
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button HorizontalAlignment="Left"
                                             Width="135"
                                            HorizontalContentAlignment="Left"
                                            x:Name="btnNhacungcap"
                                                FontWeight="Medium"
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Nhà cung cấp"
                                            Command="{Binding NhacungcapClickCommand}"
                                            CommandParameter="{Binding ElementName=GridMainForm}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnNhacungcap}"/>
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLVP}">
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--quản lí bán hàng-->
                                <StackPanel x:Name="stpQLBH">
                                    <Button HorizontalAlignment="Left"
                                             Width="145"
                                            HorizontalContentAlignment="Left"
                                        FontWeight="SemiBold"
                                        x:Name="btnQLBH"
                                        Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Quản Lý Bán Hàng">
                                        <!--Tạo event click vô button mở submenu và đổi màu btn-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                Command="{Binding OpenSubMenuCommand}"
                                                CommandParameter="{Binding ElementName=subMenuQLBH}"/>
                                                <i:InvokeCommandAction
                                                    Command="{Binding ChangeColorOpenedSTP}"
                                                    CommandParameter="{Binding ElementName=btnQLBH}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--submenu-->
                                    <StackPanel x:Name="subMenuQLBH" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                        Content="Danh sách hóa đơn"
                                                 Width="135"
                                                HorizontalContentAlignment="Left"
                                                x:Name="btnDSHD"
                                                FontWeight="Medium"
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnDSHD}"
                                                HorizontalAlignment="Left">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding DSHoaDonClickCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}" />
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLBH}">
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                        <Button Style="{StaticResource btnStyle_MenuFeatures}"
                                                x:Name="btnKhachTraHang"
                                                Width="135"
                                                FontWeight="Medium"
                                                HorizontalContentAlignment="Left"
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnKhachTraHang}"
                                        Content="Khách trả hàng"
                                            HorizontalAlignment="Left">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLBH}">
                                                    </i:InvokeCommandAction>
                                                    <i:InvokeCommandAction 
                                                    Command="{Binding KhachtrahangCommand}"
                                                    CommandParameter="{Binding ElementName=GridMainForm}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!--Quản lí khách hàng-->
                                <StackPanel x:Name="stpQLKH">
                                    <Button HorizontalAlignment="Left"
                                            FontWeight="SemiBold"
                                            x:Name="btnQLKH"
                                            Width="145"
                                            HorizontalContentAlignment="Left"
                                            Style="{StaticResource btnStyle_MenuFeatures}"
                                            Content="Quản lý khách hàng" Click="btnQLKH_Click">
                                        <!--Tạo event click vô button mở submenu và đổi màu btn-->
                                        <!--
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                    Command="{Binding OpenSubMenuCommand}"
                                                    CommandParameter="{Binding ElementName=subMenuQLKH}"/>
                                                <i:InvokeCommandAction
                                                    Command="{Binding ChangeColorOpenedSTP}"
                                                    CommandParameter="{Binding ElementName=btnQLKH}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonIconClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnIconQLKH}">
                                                </i:InvokeCommandAction>
                                                <i:InvokeCommandAction
                                                        Command="{Binding ChangeColorButtonClickCommand}"
                                                        CommandParameter="{Binding ElementName=btnDSKH}">
                                                </i:InvokeCommandAction>
                                                <i:InvokeCommandAction
                                                        Command="{Binding openDSKhachHangUCCommand}"
                                                        CommandParameter="{Binding ElementName=GridMainForm}">
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                    <!--Sub menu-->
                                    <StackPanel x:Name="subMenuQLKH" Margin="10 0 0 0" Visibility="Collapsed">
                                        <Button HorizontalAlignment="Left"
                                                x:Name="btnDSKH"
                                                Width="135"
                                                FontWeight="Medium"
                                                HorizontalContentAlignment="Left"
                                                Command="{Binding ChangeColorButtonClickCommand}"
                                                CommandParameter="{Binding ElementName=btnDSKH}"
                                                Style="{StaticResource btnStyle_MenuFeatures}"
                                                Content="Danh sách khách hàng">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
