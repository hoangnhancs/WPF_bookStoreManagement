                            </Grid>
                        </Grid>
                    </Grid>

                    <!--Grid them, edit nha cung cap-->
                    <!--{Binding EditNhacungcapVisible,UpdateSourceTrigger=PropertyChanged}-->
                    <Grid x:Name="gridAddNCC" Visibility="{Binding EditNhacungcapVisible,UpdateSourceTrigger=PropertyChanged}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Row="0" Margin="0 5 0 5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock FontSize="18"
                                           FontWeight="SemiBold"
                    Text="Thông tin cơ bản" 
                    VerticalAlignment="Center"
                    Margin="10 0 0 0"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="69*"/>
                                            <ColumnDefinition Width="11*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                            Text="Tên nhà cung cấp" 
                            VerticalAlignment="Center"
                            Margin="10,5,0,5.4" Grid.ColumnSpan="2"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox x:Name="nameSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 0"
                                 Text="{Binding nameSup,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <TextBlock 
                            Text="Email" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <TextBlock 
                            Text="Số điện thoại" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox x:Name="mailSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 5"
                                 Text="{Binding emailSup,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <TextBox x:Name="phoneSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 5"
                                 Text="{Binding phoneSup,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                        
                        <materialDesign:Card Grid.Row="1" Margin="0 5 0 5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock FontSize="18"
                                           FontWeight="SemiBold"
                    Text="Thông tin địa chỉ" 
                    VerticalAlignment="Center"
                    Margin="10 0 0 0"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <TextBlock 
                            Text="Tỉnh thành" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <TextBlock 
                            Text="Quận huyện" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox x:Name="tinhAddressSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 0"
                                 Text="{Binding tinh,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <TextBox x:Name="huyenAddressSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 0"
                                 Text="{Binding huyen,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <TextBlock 
                            Text="Phường xã" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <TextBlock 
                            Text="Số nhà, đường" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox x:Name="xaAddressSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 5"
                                 Text="{Binding xa,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <TextBox x:Name="sonhaAddressSuptb" Width="300" HorizontalAlignment="Left" Margin="10 0 0 5"
                                 Text="{Binding sonha,UpdateSourceTrigger=PropertyChanged}">
                                        </TextBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Row="2" Margin="0 5 0 5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock FontSize="18"
                                           FontWeight="SemiBold"
                    Text="Thông tin bổ sung" 
                    VerticalAlignment="Center"
                    Margin="10 0 0 0"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <TextBlock 
                            Text="Số fax" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <TextBlock 
                            Text="Mã số thuế" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox Width="300" HorizontalAlignment="Left" Margin="10 0 0 0"
                                 Text="{Binding fax,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <TextBox Width="300" HorizontalAlignment="Left" Margin="10 0 0 0"
                                 Text="{Binding masothue,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <TextBlock 
                            Text="Website" 
                            VerticalAlignment="Center"
                            Margin="10 0 0 0"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <TextBox Width="300" HorizontalAlignment="Left" Margin="10 0 0 5"
                                 Text="{Binding website,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                       
                        <Grid Grid.Row="3" Margin="0 10 0 0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button Width="100"  Content="Thoát" Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                            Background="Red" 
                            Foreground="White" 
                            BorderBrush="Red">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding btnExitCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Width="100" Background="#1e98d7" Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                        Margin="10 0 0 0"
                                Foreground="White" BorderBrush="#1e98d7" 
                                Content="Cập nhật" Visibility="{Binding ButtonUpdateVisible}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction
                                Command="{Binding updateSupplierCommand}"></i:InvokeCommandAction>
                                            <i:InvokeCommandAction
                                Command="{Binding searchEngineer}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Width="100" Background="#1e98d7" Style="{StaticResource MaterialDesignFlatDarkBgButton}" Margin="10 0 0 0"
                                Foreground="White" BorderBrush="#1e98d7" 
                                Content="Thêm" Visibility="{Binding ButtonInsertVisible}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction
                                Command="{Binding insertSupplierCommand}"></i:InvokeCommandAction>
                                            <i:InvokeCommandAction
                                Command="{Binding searchEngineer}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid x:Name="gridFilter"
                          Visibility="{Binding IsFilter}"
                          Height="100"
                          Opacity="0.95"
                          Width="300"
                          Margin="0,91,20,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top">
                    <Border BorderThickness="2"
                                CornerRadius="10"
                                BorderBrush="Black"
                                Background="White" Grid.ColumnSpan="2">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.8*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <StackPanel Orientation="Vertical"
                                            Margin="5">
                                    <TextBlock Text="Trạng thái"
                                                   FontWeight="SemiBold"></TextBlock>
                                    <ComboBox
                                IsEditable="True"
                                ItemsSource="{Binding ListStatus, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValue="{Binding CurrentStatus, UpdateSourceTrigger=PropertyChanged}"
                                Text="{Binding CurrentStatus, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalAlignment="Left"
                                Width="200">
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1">
                                <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                    <Button 
                                        Background="Red"
                                        BorderBrush="Red"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                        Content="Xoá bộ lọc"         
                                        Padding="0"
                                        Height="30"
                                        Width="100"
                                        IsEnabled="True"
                                        Command="{Binding clearFilter}"></Button>
                                    <Button 
                                        Background="#1e98d7"
                                        Foreground="White"
                                        BorderBrush="#1e98d7"
                                        Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                        Content="Lọc"              
                                        Height="30"
                                        Padding="0"
                                        Margin="20 0 0 0"
                                        Width="100"
                                        IsEnabled="True"
                                        Command="{Binding searchEngineer}"></Button>
                                </StackPanel>
                            </Grid>
                            <Button HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                                        ToolTip="Đóng Bộ Lọc"
                                        Command="{Binding OpenFilterCommand}"
                                        Width="30"
                                        Height="30"
                                        Padding="0"
                                        Background="Transparent"
                                        Foreground="Red"
                                        BorderBrush="Transparent">
                                <materialDesign:PackIcon Kind="Close" 
                                                                 Width="20"
                                                                 Height="20"/>

                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
