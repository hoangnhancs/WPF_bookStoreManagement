<UserControl x:Class="bookStoreManagetment.UserControls.NhacungcapUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookStoreManagetment.UserControls" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{StaticResource NhacungcapVM}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                    Command="{Binding LoadNhacungcapCommand}"
                    />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" HorizontalAlignment="Center">
                <Border 
                    Height="25" Width="200" 
                    BorderBrush="Black" 
                    CornerRadius="12"
                    BorderThickness="1">
                    <StackPanel Orientation="Horizontal">

                        <TextBox VerticalAlignment="Center" Margin="10 0 0 0" Text="search"></TextBox>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Grid.Column="1" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">Trạng thái</TextBlock>
                    <ComboBox  x:Name="cbbStatus" Height="25" Width="125" Margin="10 0 0 0" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Đang hợp tác"/>
                        <ComboBoxItem Content="Ngừng hợp tác"/>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                    Command="{Binding cbbStatusChangedCommand}"
                                    CommandParameter="{Binding ElementName=cbbStatus}"/>
                                <!--
                                <i:InvokeCommandAction
                                    Command="{Binding refreshDatagridCommand}"
                                    CommandParameter="{Binding ElementName=dgNhacungcap}"/>-->
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </ComboBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="3">
                <Button 
                    x:Name="btnAddSuplier" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Width="100"  
                    Background="Transparent" 
                    Foreground="Black" 
                    BorderBrush="Black"
                    Content="Thêm"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.MenuCommand}"
                    CommandParameter="AddNhacungcap" Margin="-6,25,-5.2,24.6">

                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid 
                x:Name="dgNhacungcap" 
                AutoGenerateColumns="False" 
                CanUserAddRows="False" 
                HorizontalAlignment="Center" 
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                ItemsSource="{Binding InventoryList}"
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Supplier.idSupplier}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Tên nhà cung cấp" Binding="{Binding Supplier.nameSupplier}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Supplier.addressSupplier}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Supplier.emailSupplier}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Supplier.phoneNumberSupplier}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Supplier.statusSupplier}" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button 
                                        x:Name="btnDelete" Content="Delete"
                                        Width="100"
                                        Background="Transparent" 
                                        Foreground="Black" 
                                        BorderBrush="Black">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.btnDeleteNCCClickCommand}"
                                                    CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" >
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </Button>
                                    <Button 
                                        x:Name="btnEdit" Content="Edit"
                                        Width="100"
                                        Background="Transparent" 
                                        Foreground="Black" 
                                        BorderBrush="Black"
                                        >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.MenuCommand}"
                                                    CommandParameter="EditNhacungcap">
                                                    
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
