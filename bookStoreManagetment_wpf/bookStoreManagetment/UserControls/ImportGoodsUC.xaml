<UserControl x:Class="bookStoreManagetment.UserControls.ImportGoodsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookStoreManagetment.UserControls" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             TextElement.FontWeight="Medium"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Foreground="#FF495B67"
             Background="Transparent"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="575" d:DesignWidth="1024"
             DataContext="{StaticResource ImportGoodsVM}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.1"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--căn data-->
        <Grid Grid.Row="1">
            <DataGrid ColumnWidth="*"
                      Background="Transparent"
                      GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <!--Content-->
        <Grid Background="Transparent" Grid.Column="0">

            <!--Nhập hàng-->
            <Grid x:Name="gridImportGoods" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="36"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Danh sách đơn nhập hàng"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="10 0 0 0"
                        Grid.Row="0"></TextBlock>
                    <!--thanh tìm kiếm-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="340"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" 
                          Margin="20 0 5 0">
                            <materialDesign:Card UniformCornerRadius="20">
                                <DockPanel
                                        VerticalAlignment="Center"
                                        Opacity="0.8"
                                        Margin="4 0 0 0">
                                    <materialDesign:PackIcon Kind="Search" 
                                                         DockPanel.Dock="Left"
                                                         Width="20"
                                                         Height="20"/>
                                    <TextBox Padding="5 0 0 0"
                                         DockPanel.Dock="Bottom"
                                         Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="textboxSearch"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         materialDesign:HintAssist.Hint="Nhập Mã Đơn hoặc Tên Nhân viên Nhập"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                    BorderThickness="0">
                                        <!--tìm kiếm theo tên và mã -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding TextChangedSearchCommand}" 
                                                                       CommandParameter="{Binding ElementName=textboxSearch}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                </DockPanel>
                            </materialDesign:Card>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Button Width="120"
                                x:Name="btnFilter"
                                HorizontalAlignment="Left"
                                Command="{Binding OpenFilterCommand}"
                                CommandParameter="{Binding ElementName=btnFilter}"
                                Background="{Binding BackgroudFilter}"
                                    Foreground="White"
                                BorderBrush="Transparent"
                                Margin="20 0 0 0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Filter"
                                                         HorizontalAlignment="Left"
                                                         Width="20"
                                                         Height="20"/>
                                    <TextBlock
                                     Text="Bộ Lọc"
                                    Margin="5 0 0 0"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ></TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                    <Button
                    Margin="0,3.6,20,0"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Width="150"
                        Background="#1e98d7"
                        Foreground="White"
                        BorderBrush="#1e98d7"
                    ToolTip="Resource name: MaterialDesignPaperLightButton"
                    Content="Thêm sản phẩm" VerticalAlignment="Top">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction
                                            Command="{Binding ClickHiddenCommand}"
                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                <i:InvokeCommandAction
                                            Command="{Binding ClickHiddenCommand}"
                                            CommandParameter="{Binding ElementName=gridAddImportGoods}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <materialDesign:Card Grid.Row="3" Margin="20 10 20 10">
                        <DataGrid 
                            ItemsSource="{Binding InventoryImportGoods, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ColumnWidth="*"
                            CanUserSortColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8"
                            x:Name="mydatagrid"
                            Background="Transparent">

                            <DataGrid.Columns>

                                <DataGridTextColumn                                
                                Binding="{Binding CodeBill}"
                                Header="Mã đơn"
                                Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                    <DataGridTextColumn.HeaderStyle >
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn                                
                                Binding="{Binding NameSupplier}"
                                Header="Nhà cung cấp"
                                Width="*"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                    <DataGridTextColumn.HeaderStyle >
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn                                
                                Binding="{Binding TotalPriceGoods}"
                                Header="Tổng đơn"
                                Width="auto"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                    <DataGridTextColumn.HeaderStyle >
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn                                
                            Binding="{Binding NameEmployee}"
                            Header="Nhân viên nhập"
                            Width="*"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                    <DataGridTextColumn.HeaderStyle >
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn                                
                            Binding="{Binding ImportDay}"
                            Header="Ngày nhập"
                            Width="auto"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                    <DataGridTextColumn.HeaderStyle >
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn
                                Header=""
                                Width="auto">
                                    <DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                        </Style>
                                    </DataGridTemplateColumn.HeaderStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button
                                                Height="20"
                                                     Style="{StaticResource MaterialDesignIconButton}"
                                                Margin=" 20 0 0 0"
                                                    Foreground="#1e98d7">
                                                    <materialDesign:PackIcon Kind="Eye" Width="20" Height="20"/>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=griddetailImportGoods}"/>
                                                            <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                                            <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickDetailImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                                <Button
                                                Width="20"
                                                    Foreground="ForestGreen"
                                                Height="20"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="MaterialDesignIconButton" >
                                                    <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                                            <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridEditimportGoods}"/>
                                                            <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickEditImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>

                                                <Button
                                                Width="20"
                                                    Foreground="Red"
                                                Height="20"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="MaterialDesignIconButton">
                                                    <materialDesign:PackIcon Kind="Delete" 
                                                                Width="20"
                                                                Height="20"/>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickRemoveImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <!--Thêm đơn nhập-->
            <Grid x:Name="gridAddImportGoods" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"></RowDefinition>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="0.5*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="10 0 0 0"
                                   FontStyle="Normal">
                            <Underline>Nhập hàng</Underline>
                            </TextBlock>
                            <materialDesign:PackIcon Kind="ChevronRight" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Height="30" Width="20"/>
                            <TextBlock Text="Thêm đơn"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"></TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" ></RowDefinition>
                            <RowDefinition Height="150"></RowDefinition>
                        </Grid.RowDefinitions>
                        <materialDesign:Card Grid.Row="0" Margin="50 0 50 5" VerticalAlignment="Bottom">
                            <Grid Grid.Row="0" VerticalAlignment="Bottom">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"></RowDefinition>
                                    <RowDefinition Height="50"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock Text="Nhà cung cấp" Margin="10 0 0 0"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1" >
                                    <Grid>
                                        <ComboBox
                                            x:Name="comboBoxSupplier"
                                            ItemsSource="{Binding listSupplier}"
                                            IsEditable="True"
                                            Margin="20 5 20 10">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction
                                                    Command="{Binding comboBoxListSupplierCommand}"
                                                    CommandParameter="{Binding ElementName=comboBoxSupplier}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ComboBox>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Row="1" Margin="50 0 50 0" MinHeight="20" >
                            <Grid  >
                                <Grid>
                                    <Grid Visibility="Visible"
                                          x:Name="gribiformation">
                                        <Grid.RowDefinitions>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Nhà cung cấp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin=" 20 0 20 0 "/>
                                                <TextBlock Text="{Binding NameSupplier}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="SĐT/Email" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20 0 40 0"></TextBlock>
                                                <TextBlock Text="{Binding EmailPhonenumberSupplier}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Địa chỉ" Margin="20 0 60 0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                <TextBlock Text="{Binding AddressSupplier}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" ></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="50 10 50 0">
                            <TextBlock Text="Chi tiết sản phẩm" FontSize="16" FontWeight="DemiBold" Margin=" 10 0 0 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Row="1" Margin="50 0 50 0">
                            <Grid>
                                <Grid x:Name="gribEditimportgoodsdetailproducts"
                                          Visibility="Visible">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition Height="0.2*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <materialDesign:Card Margin="0 0 0 10">
                                            <DataGrid Background="Transparent"
                                                x:Name="datagribimportgood"
                                                ItemsSource="{Binding InventoryList}"
                                                ColumnWidth="2*"
                                                CanUserSortColumns="True"
                                                CanUserAddRows="False"
                                                AutoGenerateColumns="False"
                                                materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                                materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8" >
                                                <DataGrid.Columns>

                                                    <!--Mã sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.idItem}"
                                                        Header="Mã Sản Phẩm"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Tên sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.nameItem}"
                                                        Header="Tên Sản Phẩm"
                                                        Width="*"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Đơn vị-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.unit}"
                                                        Header="Loại"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Số lượng-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Count}"
                                                        Header="Số lượng"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.importPriceItem}"
                                                        Header="Đơn giá"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding TotalPriceItem}"
                                                        Header="Thành tiền"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--button-->
                                                    <DataGridTemplateColumn
                                                        Header="    "
                                                        Width="auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Button
                                                                        Width="20"
                                                                                Foreground="ForestGreen"
                                                                        Height="20"
                                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                                        ToolTip="MaterialDesignIconButton" >
                                                                        <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                                        <i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="Click">
                                                                                <i:InvokeCommandAction
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                                                    CommandParameter="{Binding ElementName=gribEditimportgoodsdetailproducts}"/>
                                                                                <i:InvokeCommandAction
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                                                    CommandParameter="{Binding ElementName=gribeditimportGoodsdetailproduct}"/>
                                                                                <i:InvokeCommandAction 
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickEditProductAddImportGoodCommand}" 
                                                                                    CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>
                                                                    </Button>

                                                                    <Button
                                                                        Width="20"
                                                                                Foreground="Red"
                                                                        Height="20"
                                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                                        ToolTip="MaterialDesignIconButton">
                                                                        <materialDesign:PackIcon Kind="Delete" 
                                                                            Width="20"
                                                                            Height="20"/>
                                                                        <i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="Click">
                                                                                <i:InvokeCommandAction 
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickRemoveProductImportGoodsCommand}" 
                                                                                    CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>
