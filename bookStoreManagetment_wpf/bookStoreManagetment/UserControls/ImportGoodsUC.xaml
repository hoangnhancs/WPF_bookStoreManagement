<UserControl x:Class="bookStoreManagetment.UserControls.ImportGoodsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookStoreManagetment.UserControls" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             DataContext="{StaticResource ImportGoodsVM}">
    <Grid
        Background="White">

        <!--Nhập hàng-->
        <Grid x:Name="gridImportGoods" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Danh sách đơn nhập hàng"
                FontSize="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10 0 0 0"
                Grid.Row="0"></TextBlock>
                <StackPanel Orientation="Horizontal"
                Grid.Row="1">
                    <Border
                        BorderBrush= "#263238"
                        BorderThickness="1"
                        CornerRadius="15"
                        Margin="10">
                        <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                            <Button
                                Style="{DynamicResource MaterialDesignToolButton}"
                                VerticalAlignment="Center">
                                <materialDesign:PackIcon
                                    Kind="Search"
                                    Opacity=".56"
                                    Margin="2 0 0 0"/>
                            </Button>
                            <TextBox
                                Text="{Binding textBoxSearch}"
                                Margin="0 -2 0 0"
                                materialDesign:HintAssist.Hint="Search"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                MinWidth="200"
                                x:Name="textBoxSearchListofImport"
                                VerticalAlignment="Center">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction
                                        Command="{Binding textBoxSearchListofImportCommand}"
                                        CommandParameter="{Binding ElementName=textBoxSearchListofImport}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </StackPanel>
                    </Border>
                    <TextBlock Text=" Nhà cung cấp: "
                        VerticalAlignment="Center"></TextBlock>

                    <ComboBox
                        x:Name="comboBoxSupplierofImport"
                        Text="Tất cả nhà cung cấp"
                        ItemsSource="{Binding ListSuppliers}"
                        Width="230"
                        IsEditable="True"
                        Margin="0 15 0 10"
                        IsReadOnly="True"
                        SelectedItem="{Binding Selected}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                    Command="{Binding comboBoxselectSupplierCommand}"
                                    CommandParameter="{Binding ElementName=comboBoxSupplierofImport}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                    <Button
                        Margin="20 0 20 0"
                        HorizontalAlignment="Right"
                        Grid.Row="2"
                        Width="150"
                        ToolTip="Resource name: MaterialDesignPaperLightButton"
                        Content="Làm mới">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction
                                    Command="{Binding clickRefreshofImportCommand}"
                                    CommandParameter="{Binding ElementName=mydatagrid}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>

                </StackPanel>
                <Button
                    Margin="0,3.6,20,0"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Width="150"
                    ToolTip="Resource name: MaterialDesignPaperLightButton"
                    Content="Thêm sản phẩm" VerticalAlignment="Top">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction
                                            Command="{Binding ClickHiddenCommand}"
                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                            <i:InvokeCommandAction
                                            Command="{Binding ClickHiddenCommand}"
                                            CommandParameter="{Binding ElementName=gridAddImportGoods}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <materialDesign:Card Grid.Row="3">
                    <DataGrid 
                            ItemsSource="{Binding InventoryImportGoods, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ColumnWidth="*"
                            CanUserSortColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8"
                            x:Name="mydatagrid"
                            Background="White">

                        <DataGrid.Columns>

                            <DataGridTextColumn                                
                                Binding="{Binding CodeBill}"
                                Header="Mã đơn"
                                Width="auto"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn                                
                                Binding="{Binding NameSupplier}"
                                Header="Nhà cung cấp"
                                Width="auto"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn                                
                                Binding="{Binding TotalPriceGoods}"
                                Header="Tổng đơn"
                                Width="auto"
                                EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn                                
                            Binding="{Binding NameEmployee}"
                            Header="Nhân viên nhập"
                            Width="auto"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn                                
                            Binding="{Binding ImportDay}"
                            Header="Ngày nhập"
                            Width="auto"
                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn
                                Header="                   "
                                Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Width="20"
                                                Height="20"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="MaterialDesignIconButton" >
                                                <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                                        <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridEditimportGoods}"/>
                                                        <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickEditImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>

                                            <Button
                                                Width="20"
                                                Height="20"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="MaterialDesignIconButton">
                                                <materialDesign:PackIcon Kind="DeleteEmpty" 
                                                                Width="20"
                                                                Height="20"/>
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickRemoveImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>

                                            <Button
                                                Content="Chi Tiết"
                                                Height="20"
                                                Margin=" 20 0 0 0"
                                                FontSize="10">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Click">
                                                        <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=griddetailImportGoods}"/>
                                                        <i:InvokeCommandAction
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                                        <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickDetailImportGoodsCommand}" 
                                                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Button>
                                        </StackPanel>

                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>

                <Grid Grid.Row="4">

                </Grid>
            </Grid>
        </Grid>

        <!--Thêm đơn nhập-->
        <Grid x:Name="gridAddImportGoods" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden"
                                   HorizontalAlignment="Stretch" Margin="0,0,0.4,0.6" Width="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="10 0 0 0"
                                   FontStyle="Normal">
                            <Underline>Nhập hàng</Underline>
                            </TextBlock>
                            <materialDesign:PackIcon Kind="ChevronRight" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Height="30" Width="20"/>
                            <TextBlock Text="Thêm đơn" FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"></TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" ></RowDefinition>
                            <RowDefinition Height="150"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="50 0 50 0" VerticalAlignment="Bottom">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Border BorderBrush="#424242"
                                    BorderThickness="2 2 2 0"
                                    HorizontalAlignment="Stretch">
                                    <TextBlock Text="Nhà cung cấp" FontSize="20" Margin="10 0 0 0"></TextBlock>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1" >
                                <Border BorderBrush="#424242"
                                    BorderThickness="2 0 2 0"
                                    HorizontalAlignment="Stretch">
                                    <Grid>
                                        <ComboBox
                                            x:Name="comboBoxSupplier"
                                            ItemsSource="{Binding listSupplier}"
                                            IsEditable="True"
                                            Margin="20 5 20 10"
                                            FontSize="18">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction
                                                    Command="{Binding comboBoxListSupplierCommand}"
                                                    CommandParameter="{Binding ElementName=comboBoxSupplier}" />
                                                </i:EventTrigger>

                                            </i:Interaction.Triggers>

                                        </ComboBox>


                                    </Grid>



                                </Border>
                            </Grid>

                        </Grid>

                        <Grid Grid.Row="1" Margin="50 0 50 0" MinHeight="20" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="189*"/>
                                <ColumnDefinition Width="694*"/>
                            </Grid.ColumnDefinitions>
                            <Border BorderBrush="#424242"
                                BorderThickness="2" Margin="0,0,-0.8,-0.6" Grid.ColumnSpan="2">
                                <Grid>
                                    <Grid Visibility="Visible"
                                          x:Name="gribiformation">
                                        <Grid.RowDefinitions>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Nhà cung cấp" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Margin=" 20 0 50 0 "/>
                                                <TextBlock Text="{Binding NameSupplier}" FontSize="18" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="SĐT/Email" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20 0 93 0"></TextBlock>
                                                <TextBlock Text="{Binding EmailPhonenumberSupplier}" FontSize="18" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Địa chỉ" FontSize="15" Margin="20 0 116 0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                                <TextBlock Text="{Binding AddressSupplier}" FontSize="18" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" ></RowDefinition>
                            <RowDefinition Height="300"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="50 0 50 0">
                            <Border BorderBrush="#424242"
                            BorderThickness="2 2 2 0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Stretch">
                                <TextBlock Text="Chi tiết sản phẩm" FontSize="20" Margin=" 10 0 0 0"></TextBlock>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="1" Margin="50 0 50 0">
                            <Border BorderBrush="#424242"
                                BorderThickness="2">

                                <Grid>
                                    <Grid x:Name="gribEditimportgoodsdetailproducts"
                                          Visibility="Visible">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="0.2*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <DataGrid
                                                x:Name="datagribimportgood"
                                                ItemsSource="{Binding InventoryList}"
                                                ColumnWidth="2*"
                                                Margin="0 8 0 0"
                                                CanUserSortColumns="True"
                                                CanUserAddRows="False"
                                                AutoGenerateColumns="False"
                                                materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                                materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8" Background="White">
                                                <DataGrid.Columns>

                                                    <!--Mã sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.idItem}"
                                                        Header="Mã Sản Phẩm"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Tên sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.nameItem}"
                                                        Header="Tên Sản Phẩm"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                    </DataGridTextColumn>

                                                    <!--Đơn vị-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.unit}"
                                                        Header="Loại"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Số lượng-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Count}"
                                                        Header="Số lượng"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.importPriceItem}"
                                                        Header="Đơn giá"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding TotalPriceItem}"
                                                        Header="Thành tiền"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                    </DataGridTextColumn>

                                                    <!--button-->
                                                    <DataGridTemplateColumn
                                                        Header="    "
                                                        Width="auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Button
                                                                        Width="20"
                                                                        Height="20"
                                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                                        ToolTip="MaterialDesignIconButton" >
                                                                        <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                                        <i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="Click">
                                                                                <i:InvokeCommandAction
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                                                    CommandParameter="{Binding ElementName=gribEditimportgoodsdetailproducts}"/>
                                                                                <i:InvokeCommandAction
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickHiddenCommand}"
                                                                                    CommandParameter="{Binding ElementName=gribeditimportGoodsdetailproduct}"/>
                                                                                <i:InvokeCommandAction 
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickEditProductAddImportGoodCommand}" 
                                                                                    CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>
                                                                    </Button>

                                                                    <Button
                                                                        Width="20"
                                                                        Height="20"
                                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                                        ToolTip="MaterialDesignIconButton">
                                                                        <materialDesign:PackIcon Kind="DeleteEmpty" 
                                                                            Width="20"
                                                                            Height="20"/>
                                                                        <i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="Click">
                                                                                <i:InvokeCommandAction 
                                                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.ClickRemoveProductImportGoodsCommand}" 
                                                                                    CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>
                                                                    </Button>
                                                                </StackPanel>

                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Button Content="Thêm sản phẩm" Width="200"
                                                    FontSize="20"
                                                    HorizontalAlignment="Left"
                                                    Margin="20 0 0 0">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction
                                                            Command="{Binding ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridAddImportGoods}"/>
                                                            <i:InvokeCommandAction
                                                            Command="{Binding ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gribAddItem}"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBlock Text="Thành tiền:"
                                                           VerticalAlignment="Center"
                                                           FontSize="30"
                                                           Margin="0 0 0 0"
                                                           HorizontalAlignment="Right"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="{Binding TotalAllProducts}"
                                                           VerticalAlignment="Center"
                                                           FontSize="30"
                                                           Margin="10 0 20 0"></TextBlock>
                                            </Grid>

                                        </Grid>
                                    </Grid>

                                    <Grid x:Name="gribeditimportGoodsdetailproduct" Visibility="Collapsed">

                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.7*"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <TextBlock Text="Mã sản phẩm" FontSize="20" VerticalAlignment="Center" Margin="20 0 0 0"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBlock Text="{Binding CodeProduct}" FontSize="20" VerticalAlignment="Center"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="Đơn vị" FontSize="20" VerticalAlignment="Center"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="3">
                                                <TextBlock Text="{Binding UnitProduct}" FontSize="20" VerticalAlignment="Center"
                                                           Margin="10 0  0 0"></TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.29*"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <TextBlock Text="Tên sản phẩm" FontSize="20" VerticalAlignment="Center"
                                                           Margin="20 0 0 0"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBlock Text="{Binding NameProduct}" FontSize="20" VerticalAlignment="Center"></TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.6*"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <TextBlock Text="Số lượng" FontSize="20" VerticalAlignment="Center"
                                                           Margin="20 0 0 0"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBox
                                                    Text="{Binding QuantityProduct}"
                                                    Margin="20 0 20 0"
                                                    FontSize="20"
                                                    VerticalAlignment="Center"
                                                    x:Name="textboxquantity">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="TextChanged">
                                                            <i:InvokeCommandAction
                                                                Command="{Binding textchangeddetailquantityCommand}"
                                                                CommandParameter="{Binding ElementName=textboxquantity}"/>

                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBox>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="Đơn giá" FontSize="20" VerticalAlignment="Center"
                                                           Margin="15 0 0 0"></TextBlock>
