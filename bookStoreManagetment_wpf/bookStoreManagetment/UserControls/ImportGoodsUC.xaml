                                    <Grid Grid.Row="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="SĐT/Email"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20 0 40 0"></TextBlock>
                                            <TextBlock Text="{Binding DetailEmailPhonenumberSupplier}"  VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Địa chỉ"  Margin="20 0 60 0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                            <TextBlock Text="{Binding DetailAddressSupplier}"  VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="2" Margin="20 0 20 0">
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" ></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Text="Chi tiết sản phẩm"  Margin=" 10 0 0 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid>
                                    <Grid x:Name="gribimportgoodsdetailproducts"
                                          Visibility="Visible">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="0.2*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <DataGrid Background="Transparent"
                                                x:Name="datagribdetailimportgoods"
                                                ItemsSource="{Binding InventoryDetail}"
                                                ColumnWidth="2*"
                                                Margin="0 8 0 0"
                                                CanUserSortColumns="True"
                                                CanUserAddRows="False"
                                                AutoGenerateColumns="False"
                                                materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                                materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8">
                                                <DataGrid.Columns>

                                                    <!--Mã sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.idItem}"
                                                        Header="Mã Sản Phẩm"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Tên sản phẩm-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.nameItem}"
                                                        Header="Tên Sản Phẩm"
                                                        Width="2*"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Đơn vị-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.unit}"
                                                        Header="Loại"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Số lượng-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Count}"
                                                        Header="Số lượng"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding Item.importPriceItem}"
                                                        Header="Đơn giá"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <!--Giá-->
                                                    <DataGridTextColumn
                                                        Binding="{Binding TotalPriceItem}"
                                                        Header="Thành tiền"
                                                        Width="auto"
                                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                                                        <DataGridTextColumn.HeaderStyle >
                                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.HeaderStyle>
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="1">
                                                <TextBlock Text="Thành tiền:"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"
                                                           Margin="0 0 0 0"
                                                           HorizontalAlignment="Right"></TextBlock>
                                            </Grid>
                                            <Grid Grid.Column="2">
                                                <TextBlock Text="{Binding TotalAllImportGoods}"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"
                                                           Margin="10 0 20 0"></TextBlock>
                                            </Grid>

                                        </Grid>
                                    </Grid>


                                </Grid>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    

                    <Grid Grid.Row="3">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                            <Button
                            Margin="0 0 20 0"
                                Background="Red"
                                BorderBrush="Red"
                                Foreground="White"
                            HorizontalAlignment="Right"
                            Grid.Row="2"
                            Width="150"
                            ToolTip="Resource name: MaterialDesignPaperLightButton"
                            Content="Thoát">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                                            Command="{Binding ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=griddetailImportGoods}"/>
                                        <i:InvokeCommandAction
                                                            Command="{Binding ClickHiddenCommand}"
                                                            CommandParameter="{Binding ElementName=gridImportGoods}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <Grid x:Name="gridFilter"
                          Visibility="{Binding IsFilter}"
                          Height="200"
                          Opacity="0.95"
                          Width="300"
                          Margin="0,120,20,0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top">
                <Border BorderThickness="2"
                                CornerRadius="10"
                                BorderBrush="Black"
                                Background="White">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center"
                                            Margin="10 0 0 0">
                                <TextBlock Text="Nhà cung cấp"
                                                   FontWeight="SemiBold"></TextBlock>
                                <ComboBox IsEditable="True"
                                                  ItemsSource="{Binding listSupplier}"
                                                  SelectedValue="{Binding DisplayNameSupplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Text="{Binding DisplayNameSupplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Left"
                                              Width="150"></ComboBox>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Center"
                                            Margin="5">
                                <TextBlock Text="Ngày tạo"
                                                   FontWeight="SemiBold"></TextBlock>
                                <StackPanel Orientation="Horizontal"
                                                    Margin="0 2 0 0">
                                    <DatePicker SelectedDate="{Binding displayBeginDay}"
                                                        HorizontalAlignment="Left"
                                                    Width="100"
                                                    materialDesign:HintAssist.Hint="Ngày bắt đầu" 
                                                        FirstDayOfWeek="Monday" 
                                            SelectedDateFormat="Short">
                                    </DatePicker>
                                    <materialDesign:PackIcon
                                                Margin="10 0 10 0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Kind="Minus" 
                                                                     />
                                    <DatePicker SelectedDate="{Binding displayEndDay}"
                                                        HorizontalAlignment="Right"
                                                        DisplayDateStart="{Binding displayBeginDay}"
                                                    Width="100"
                                                    materialDesign:HintAssist.Hint="Ngày kết thúc" SelectedDateFormat="Short">
                                    </DatePicker>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="2">
                            <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                <Button Content="Xoá bộ lọc"
                                        Background="Red"
                                        Foreground="White"
                                        BorderBrush="Red"
                                                Command="{Binding DeleteFilterCommand}"
                                                CommandParameter="{Binding ElementName=btnFilter}"
                                                Padding="0"
                                                Height="30"
                                                Width="100"></Button>
                                <Button Content="Lọc"
                                        Background="#1e98d7"
                                        Foreground="White"
                                        BorderBrush="#1e98d7"
                                                Command="{Binding CheckFilterCommand}"
                                                CommandParameter="{Binding ElementName=btnFilter}"
                                                Height="30"
                                                Padding="0"
                                                Margin="20 0 0 0"
                                                Width="100"></Button>
                            </StackPanel>
                        </Grid>
                        <Button HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                                        ToolTip="Đóng Bộ Lọc"
                                        Command="{Binding CloseFilterCommand}"
                                        Width="30"
                                        Height="30"
                                        Padding="0"
                                        Background="Transparent"
                                        Foreground="Red"
                                        BorderBrush="Transparent">
                            <materialDesign:PackIcon Kind="Close" 
                                                                 Width="20"
                                                                 Height="20"/>

                        </Button>
                    </Grid>
                </Border>
            </Grid>

        </Grid> 
    </Grid>
    
</UserControl>
