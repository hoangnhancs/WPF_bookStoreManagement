                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="5, 5, 5, 5">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock Text="Tiền thừa trả lại" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>
                                <Grid Grid.Row="1" Background="White">
                                    <Border/>
                                    <TextBlock Text="{Binding ExchangePrice}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="2" Margin="5, 5, 5, 5">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock Text="Tham chiếu" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>
                                <Grid Grid.Row="1" Background="White">
                                    <Border/>
                                    <TextBlock Text="Chỗ này tham chiếu cái gì nhỉ?" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </Grid>
                            </Grid>
                        </Grid>
                        
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Button Content="Xác nhận" Width="120" Height="30">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                        Command="{Binding ConfirmClickCommand}"/>
                                        <i:InvokeCommandAction
                                        Command="{Binding BacktoDSHoaDonCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Button Command="{Binding CancelClickCommand}" Content="Hủy" Width="120" Height="30"></Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</UserControl>
