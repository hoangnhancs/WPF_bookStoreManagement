                                                                            Path=DataContext.RemoveItemFromSellBillCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent"
                                                                                    Foreground="Red"
                                                            BorderBrush="Transparent">
                                                                                <materialDesign:PackIcon Kind="MinusCircle"/>
                                                                            </Button>
                                                                        </DataTemplate>
                                                                    </DataGridTemplateColumn.CellTemplate>
                                                                </DataGridTemplateColumn>
                                                            </DataGrid.Columns>
                                                        </DataGrid>
                                                    </Grid>

                                                    <Grid Grid.Row="3" Margin="20,1,20,1">

                                                        <Button HorizontalAlignment="Left" VerticalAlignment="Center" Background="ForestGreen" Content="Thêm mới" BorderBrush="ForestGreen" Margin="0,2,0,2" Height="24">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="Click">
                                                                    <i:InvokeCommandAction
                                                Command="{Binding AddItemIntoSellBillCommand}">
                                                                    </i:InvokeCommandAction>
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </Button>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <TextBlock Margin="0,0,10,0" FontSize="13" Text="Tổng tiền" VerticalAlignment="Center" />
                                                            <TextBlock Text="{Binding Total, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="13" VerticalAlignment="Center" MinWidth="100"/>
                                                        </StackPanel>
                                                    </Grid>

                                                </Grid>
                                            </materialDesign:Card>
                                        </Grid>
                                    </Grid>
                                </Grid>

                                <!--Bảng thông tin đơn hàng-->
                                <Grid Grid.Column="1" Margin="0, 15, 10, 10">
                                    <materialDesign:Card>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition Height="3*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Viewbox Stretch="Uniform" Margin="40, 0, 40, 0">
                                                    <TextBlock FontSize="18" FontWeight="SemiBold" Text="Thông tin đơn hàng" HorizontalAlignment="Right"/>
                                                </Viewbox>
                                            </Grid>
                                            <Grid Grid.Row="1" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Mã đơn hàng" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                                <Grid Grid.Row="1" Background="Transparent">
                                                    <Border/>
                                                    <TextBlock Padding="4" Text="{Binding SellBillCode}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="2" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Ngày đặt hàng" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                                <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                                                    <Border/>
                                                    <DatePicker Padding="4" SelectedDate="{Binding OrderDate}" HorizontalAlignment="Stretch"/>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="3" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Ngày giao hàng" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Border/>
                                                    <DatePicker Padding="4" SelectedDate="{Binding DeliveryDate}" HorizontalAlignment="Stretch"></DatePicker>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="4" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Nhân viên" HorizontalAlignment="Left"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <ComboBox Padding="4"  materialDesign:HintAssist.Hint="Tên nhân viên"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        DisplayMemberPath="firstName"
                                        ItemsSource="{Binding EmployeeList}" 
                                        SelectedItem="{Binding SelectedEmployeeCreateBill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEditable="True">
                                                    </ComboBox>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="5" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Ngày chứng từ" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,4"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Border/>
                                                    <DatePicker Padding="4" SelectedDate="{Binding LicenseDate}" HorizontalAlignment="Stretch"></DatePicker>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="6" Margin="20, 0, 20, 0" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Tag" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Border/>
                                                    <TextBox Padding="4" Text ="{Binding Tag}" materialDesign:HintAssist.Hint="tag" BorderBrush="Black" HorizontalAlignment="Stretch"/>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Row="7" Margin="20, 0, 20, 10" HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="3*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Ghi chú" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Border/>
                                                    <TextBox Padding="4" Text ="{Binding Note}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" materialDesign:HintAssist.Hint="Ghi chú" HorizontalAlignment="Stretch" />
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </materialDesign:Card>
                                </Grid>
                            </Grid>

                        </Grid>
                        <!--Thanh toán-->
                        <Grid Grid.Row="2">
                            <Button HorizontalAlignment="Center"
                                Command="{Binding CheckoutClickCommand}"
                                VerticalAlignment="Center" Background="#1e98d7" BorderBrush="#1e98d7" Content="Thanh toán" Foreground="White" Width="120">
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
                <!--{Binding IsOrderComfirmation}-->
                <Grid Visibility="{Binding IsOrderComfirmation}" x:Name="gridConfirmOrder" Background="Transparent" Height="200" Width="350">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="12">
                        <Grid Margin="2">
                            <Grid.RowDefinitions >
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="3*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15">
                            <Run Text="Xác nhận thanh toán cho đơn hàng"/>
                            <Run Text="{Binding SellBillCode}"/>
                                </TextBlock>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="5, 5, 5, 5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="Tổng tiền đơn hàng" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Grid Grid.Row="1" Background="White">
                                            <Border/>
                                            <TextBlock Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="5, 5, 5, 5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="Tiền khách thanh toán" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Grid Grid.Row="1" Background="White">
                                            <Border/>
                                            <TextBox Text="{Binding PayPrice, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="5, 5, 5, 5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="Tiền thừa trả lại" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Grid Grid.Row="1" Background="White">
                                            <Border/>
                                            <TextBlock Text="{Binding ExchangePrice}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Column="2" Margin="5, 5, 5, 5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                                <TextBlock Margin="2 0 0 0"
                                                       HorizontalAlignment="Left" VerticalAlignment="Center">
                                               Kiểm tra kĩ hoá đơn
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1" Background="White">
                                            <Border/>
                                            <TextBlock Text="Trước khi khách rời đi" Margin="6 0 0 0"
                                                       HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Grid>
                                    </Grid>
                                </Grid>

                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1">
                                    <Button Background="#1e98d7" BorderBrush="#1e98d7" Foreground="White"
                                        Content="Xác nhận" Width="120" Height="30">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction
                                        Command="{Binding ConfirmClickCommand}"/>
                                                <i:InvokeCommandAction
                                        Command="{Binding BacktoDSHoaDonCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </Grid>
                                <Grid Grid.Column="0">
                                    <Button Background="red" BorderBrush="red" Foreground="White"
                                        Command="{Binding CancelClickCommand}" Content="Hủy" Width="120" Height="30"></Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</UserControl>
