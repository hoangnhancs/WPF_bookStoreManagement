<UserControl x:Class="bookStoreManagetment.UserControls.DSHoaDonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookStoreManagetment.UserControls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             TextElement.FontWeight="Medium"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="Transparent"
             Foreground="#FF495B67"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="575" d:DesignWidth="1024"
             DataContext="{StaticResource DSHoaDonVM}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedUserControlCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.1"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--căn data-->
        <Grid Grid.Row="1">
            <DataGrid ColumnWidth="*"
                      Background="Transparent"
				  GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <!--main Content-->
        <Grid Grid.Row = "0">
            <Grid Margin="10" Background="Transparent">
                <Grid Visibility="{Binding IsDSHoaDon}" x:Name="gridDSHoaDon">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="10*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Các button thao tác-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="10,0,0,0">
                            <TextBlock  Text="Danh Sách Hóa Đơn"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            FontSize="20">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">

                                <!--Set style cho button trong stackpanel-->
                                <StackPanel.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Width" Value="90"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5,0,5,0"/>
                                    </Style>
                                </StackPanel.Resources>

                                <!--Xuất file Excel-->
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Command="{Binding ExportFileCommand}"
                                        CommandParameter="{Binding ElementName=datagridBillList}"
                                        Width="150"
                                        Background="ForestGreen"
                                        BorderBrush="ForestGreen"
                                        Padding="0"
                                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                        Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                     Width="20"
                                                     Height="20"
                                                     Margin="0 0 10 0"/>
                                        <TextBlock Text="Xuất file"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>


                                <!--Tạo đơn hàng-->
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Width="150"
                                Background="#1e98d7"
                                BorderBrush="#1e98d7"
                                Command="{Binding LoadCreateBillCommand}"
                                Padding="0"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PlusCircleOutline" 
                                                     Width="20"
                                                     Height="20"
                                                     Margin="0 0 10 0"/>
                                        <TextBlock Text="Tạo đơn hàng"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="540.8"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Thanh tìm kiếm-->
                        <Grid Grid.Column="0" Height="30"  HorizontalAlignment="Left" x:Name="gridSearhDSDonHang">
                            <materialDesign:Card UniformCornerRadius="12">
                                <DockPanel HorizontalAlignment="Stretch"
                               VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Search" Width="30" Height="30"/>
                                    <TextBox materialDesign:HintAssist.Hint="Tìm kiếm theo mã đơn hàng, tên, SĐT khách hàng, ..." 
                                                VerticalAlignment="Center"
                                             Width="{Binding ElementName=gridSearhDSDonHang, Path=ActualWidth}"
                                 Text="{Binding SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderBrush="Transparent"
                                 CaretBrush="Transparent"/>
                                </DockPanel>
                            </materialDesign:Card>
                        </Grid>

                        <Grid Grid.Column="1" Margin="25, 5, 10, 5">
                            <Grid.Resources>

                                <!--Set style cho button-->
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>

                            </Grid.Resources>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">

                                <!--Trạng thái đơn hàng-->
                                <materialDesign:Card Height="30">
                                    <ComboBox materialDesign:HintAssist.Hint="Trạng thái"
                                              Padding="4"
                                              VerticalContentAlignment="Center"
                                             
                              Width="150"
                              Height="30"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              FontSize="13"
                              SelectedItem="{Binding SelectedOrderStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding OrderStatusList}">
                                        <!--<ComboBoxItem Content="Đang giao dịch"/>-->
                                    </ComboBox>
                                </materialDesign:Card >

                                <!--Nhân viên phụ trách đơn hàng-->
                                <materialDesign:Card Margin="20 0 20 0" Height="30">
                                    <ComboBox materialDesign:HintAssist.Hint="Nhân viên phụ trách"
                              Width="150"
                              Padding="4"
                              Height="30"
                                              VerticalContentAlignment="Center"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              FontSize="13"
                              IsEditable="True"
                              DisplayMemberPath="firstName"
                              ItemsSource ="{Binding Employee}"
                              SelectedItem="{Binding SelectedEmployee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    </ComboBox>

                                </materialDesign:Card>
                                
                                <!--Lưu bộ lọc-->
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Width="150"
                            Height="30"
                            Background="Red"
                            BorderBrush="Red"
                            Padding="0"
                            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
                                    <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FilterRemove" 
                                                     Width="20"
                                                     Height="20"
                                                     Margin="0 0 10 0"/>
                                        <TextBlock Text="Xóa bộ lọc"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction
                                                Command="{Binding ResetFilterCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>

                            </StackPanel>

                        </Grid>
                    </Grid>

                    <!--data grid hiển thị thông tin hóa đơn-->
                    <Grid Grid.Row="2">
                        <materialDesign:Card Margin="5 5 10 5">
                            <DataGrid ItemsSource="{Binding DisplayBillList}" 
                                      x:Name="datagridBillList"
                                      ColumnWidth="*"
                      SelectedItem="{Binding SelectedBill, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                      CanUserAddRows="False"
                      AutoGenerateColumns="False"
                      Background="Transparent" 
                      Margin="5, 0, 5, 0">
                                <DataGrid.Resources>
                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                    <Grid Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center" />
                                                        <ContentPresenter HorizontalAlignment="Center" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <!--<DataGridTextColumn Binding="{Binding Bill.billCode}" Width ="Auto" Header="Mã hóa đơn" IsReadOnly ="True"/>-->

                                    <DataGridTemplateColumn Header="Mã hóa đơn"  Width ="Auto" IsReadOnly ="True" CanUserSort="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding BillCode}"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="Blue">
                                                    <i:Interaction.Triggers>
                                                        <!--ẩn hiện grid-->
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction 
                                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.LoadBillDetailCommand}"/>
                                                            <!--CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />-->
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Binding="{Binding CustomerFullName}" Width ="*" Header="Tên khách hàng" IsReadOnly ="True">
                                        <DataGridTextColumn.HeaderStyle >
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding EmployeeFullName}" Width ="*" Header="Tên nhân viên" IsReadOnly ="True">
                                        <DataGridTextColumn.HeaderStyle >
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding BillStatus}" Width ="Auto" Header="Trạng thái đơn" IsReadOnly ="True">
                                        <DataGridTextColumn.HeaderStyle >
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding Total}" Width ="Auto" Header="Tiền thanh toán" IsReadOnly ="True">
                                        <DataGridTextColumn.HeaderStyle >
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!--<DataGridTemplateColumn Header="In hóa đơn"
                                                            Width="auto">
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button HorizontalAlignment="Right" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}},
                                                        Path=DataContext.PrintBillCommand}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                                        Foreground="#1e98d7"
                                        BorderBrush="Transparent">
                                                    <materialDesign:PackIcon Kind="Printer" Width="20" Height="20" Foreground="#1e98d7"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>-->
                                </DataGrid.Columns>
                            </DataGrid>
                        </materialDesign:Card>
                    </Grid>
                </Grid>

                <Grid Visibility="{Binding IsBillViewing}" x:Name="gridXemHoaDon">
                    <Grid Margin="10,0,10,0" Background="Transparent">
                        <Grid.Resources>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--Các button thao tác-->
                        <Grid Grid.Row="0" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="10,0,0,0">
                                <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <WrapPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="5,0,5,0"></Setter>
                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                            <Setter Property="Background" Value="Transparent"></Setter>
                                            <Setter Property="FontSize" Value="15"></Setter>
                                        </Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="5,0,5,0"></Setter>
                                            <Setter Property="FontSize" Value="15"></Setter>
                                        </Style>
                                    </WrapPanel.Resources>
                                    <Button Content="Danh sách hóa đơn" Foreground="#d75c1e"
                                            VerticalAlignment="Center" 
                                            Command="{Binding BacktoDSHoaDonCommand}"/>

                                    <TextBlock Text=">" VerticalAlignment="Center"/>
                                    <TextBlock Text="Tạo hóa đơn" VerticalAlignment="Center"/>
                                    <TextBlock Text=">" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ViewBillDetail.Bill.billCode}" VerticalAlignment="Center"/>
                                </WrapPanel>
                            </Grid>
                            <Grid Grid.Column="1" Margin="0,0,30,0">
                                <Button Command="{Binding OpenPrintBillCommand}" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top" Background="forestGreen" BorderBrush="forestGreen">
                                    <materialDesign:PackIcon Kind="Printer"/>
                                </Button>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Margin="10, 10, 10, 10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4*"></RowDefinition>
                                            <RowDefinition Height="9*"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <!--Bảng thông tin khách hàng-->
                                        <Grid Grid.Row="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:Card Grid.Column="0" Margin="5">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0.8*"></RowDefinition>
                                                            <RowDefinition></RowDefinition>
                                                            <RowDefinition></RowDefinition>
                                                            <RowDefinition></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" FontWeight="SemiBold" Text="Thông tin khách hàng" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                                        <Grid Grid.Row="1">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Grid.Column="0" Margin="10,0,0,0">
                                                                <TextBlock Text="Tên khách hàng" HorizontalAlignment="Stretch"  VerticalAlignment="Center" FontSize="15"/>
                                                            </Grid>
                                                            <Grid Grid.Column="1" Margin="10,0,20,0">
                                                                <Grid Height="25">
                                                                    <Border>
                                                                        <TextBlock  Text="{Binding ViewBillDetail.CustomerFullName}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Grid>

                                                        </Grid>
                                                        <Grid Grid.Row="2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Grid.Column="0" Margin="10,0,0,0">
                                                                <TextBlock Text="Số điện thoại" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
                                                            </Grid>
                                                            <Grid Grid.Column="1" Margin="10,0,20,0">
                                                                <Border Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                                                    BorderBrush="Black" BorderThickness="1">
                                                                    <TextBox Padding="4" materialDesign:HintAssist.Hint="Số điện thoại" VerticalAlignment="Center" HorizontalAlignment="Stretch" BorderBrush="Transparent" Text="{Binding ViewBillDetail.CustomerAddress}"></TextBox>
                                                                </Border>
                                                            </Grid>

                                                        </Grid>
                                                        <Grid Grid.Row="3">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Grid.Column="0" Margin="10,0,0,0">
                                                                <TextBlock Text="Địa chỉ giao hàng" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
                                                            </Grid>
                                                            <Grid Grid.Column="1" Margin="10,0,20,0">
                                                                <Border Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                                                    <TextBox Padding="4" materialDesign:HintAssist.Hint="Địa chỉ giao hàng" VerticalAlignment="Center" HorizontalAlignment="Stretch" BorderBrush="Transparent" Text="{Binding ViewBillDetail.CustomerAddress}"></TextBox>
                                                                </Border>
                                                            </Grid>

                                                        </Grid>
                                                    </Grid>
                                                </materialDesign:Card>
                                                <materialDesign:Card Grid.Column="1" Margin="10 5 5 5">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0.8*"></RowDefinition>
                                                            <RowDefinition></RowDefinition>
                                                            <RowDefinition></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock FontWeight="SemiBold" Grid.Row="0" Text="Hình thức thanh toán và giao hàng" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                                        <!--Phương thức thanh toán-->
                                                        <Grid Grid.Row="1">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid Grid.Column="0" Margin="10,0,0,0">

                                                                <StackPanel Orientation="Horizontal" Width="300" Height="25">
                                                                    <!--<Image Source="../pictures/creditCard.png" Stretch="Uniform" />-->
                                                                    <materialDesign:PackIcon Kind="CreditCard" Width="25" Height="30"
                                                                                             HorizontalAlignment="Center"
                                                                                             VerticalAlignment="Center"/>

                                                                    <TextBlock Text="Thanh Toán" FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                                </StackPanel>

                                                            </Grid>
                                                            <Grid Grid.Column="1" Margin="10,0,20,0">
                                                                <Border Height="25"/>
                                                                <TextBlock Text="{Binding ViewBillDetail.SellBill.paymentMethod}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                                            </Grid>

                                                        </Grid>

                                                        <!--Đóng gói và giao hàng-->
                                                        <Grid Grid.Row="2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>

                                                            <Grid Grid.Column="0" Margin="10,0,0,0"  Width="300" Height="25">

                                                                <StackPanel Orientation="Horizontal">
                                                                    <!--<Image Source="../pictures/deliveryIcon.png" Stretch="Uniform" />-->
                                                                    <materialDesign:PackIcon Kind="TruckDelivery" Width="25" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    <TextBlock Text="Giao hàng" FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                                </StackPanel>

                                                            </Grid>
                                                            <Grid Grid.Column="1" Margin="10,0,20,0">
                                                                <Border Height="25"/>
                                                                <TextBlock Text="{Binding ViewBillDetail.SellBill.deliveryDate}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                            </Grid>

                                                        </Grid>
                                                    </Grid>
                                                </materialDesign:Card>
                                            </Grid>
                                        </Grid>

                                        <!--Bảng thông tin sản phẩm-->
                                        <Grid Grid.Row="1" Margin="5, 10, 5, 0">
                                            <materialDesign:Card>
                                                <Grid >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="36"></RowDefinition>
                                                        <RowDefinition Height="3*"></RowDefinition>
                                                        <RowDefinition  Height="36"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid Grid.Row="0">
                                                        <TextBlock FontWeight="SemiBold" Text="Thông tin sản phẩm" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

                                                    </Grid>

                                                    <Grid Grid.Row="1">
                                                        <DataGrid ItemsSource="{Binding ViewBillDetail.OrderItems}" 
                                            SelectedItem="{Binding SelectedSellBillItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                                                  ColumnWidth="*"
                                            CanUserAddRows="False"
                                            AutoGenerateColumns="False"
                                            Background="Transparent" 
                                            Margin="5, 0, 5, 0" CanUserSortColumns="False">
                                                            <DataGrid.Resources>
                                                                <Style TargetType="{x:Type DataGridCell}">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                                                <Grid Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter VerticalAlignment="Center" />
                                                                                </Grid>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </DataGrid.Resources>

                                                            <DataGrid.Columns>
                                                                <DataGridTextColumn Binding="{Binding Item.idItem}" Width ="Auto" Header="Mã sản phẩm" IsReadOnly ="True">
                                                                    <DataGridTextColumn.HeaderStyle >
                                                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                        </Style>
                                                                    </DataGridTextColumn.HeaderStyle>
                                                                    <DataGridTextColumn.ElementStyle>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                                                        </Style>
                                                                    </DataGridTextColumn.ElementStyle>
                                                                </DataGridTextColumn>
