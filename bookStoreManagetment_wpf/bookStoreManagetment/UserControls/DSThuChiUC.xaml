<UserControl x:Class="bookStoreManagetment.UserControls.DSThuChiUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookStoreManagetment.UserControls"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             DataContext="{StaticResource DSThuChiVM}"
             d:DesignHeight="575" d:DesignWidth="1024">
    <!--load user control-->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedUserControlCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <!--Ds thu chi-->
    <Grid Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="56"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0">
            <TextBlock Text="Danh Sách Thu Chi"
                       Margin="10 0 0 0"
                       FontWeight="Bold"
                       FontSize="20"
                       Width="auto"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"></TextBlock>


            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 0 10 0">

                <!--Header-->
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Width="150"
                            Background="Green"
                            BorderBrush="Green"
                            Padding="0"
                            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
                    <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FileExport" 
                                                     Width="20"
                                                     Height="20"
                                                     Margin="0 0 10 0"/>
                        <TextBlock Text="Xuất file"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!--tính toán thu chi-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal"
                                Margin="50 0 0 0">
                    <DatePicker
                            Width="120"
                            materialDesign:HintAssist.Hint="Ngày bắt đầu"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    <Separator Width="10"
                                   Margin="5 0 5 0"></Separator>
                    <DatePicker
                            Width="120"
                            materialDesign:HintAssist.Hint="Ngày kết thúc"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    <Button Content="bộ lọc"
                                Margin="5 0 0 0"></Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1"
                      Margin="50 0 50 0">
                <Border BorderBrush="Black"
                            BorderThickness="1">
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Số dư đầu kỳ"></TextBlock>
                                <TextBlock Text="{Binding Report.OldBudget}"
                                               HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Kind="Plus" 
                                                         Width="30"
                                                         Height="30"
                                                         Margin="50 0 50 0"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Tổng thu"></TextBlock>
                                <TextBlock Text="{Binding Report.Earned}"
                                               HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Kind="Minus" 
                                                         Width="30"
                                                         Height="30"
                                                         Margin="50 0 50 0"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Tổng Chi"></TextBlock>
                                <TextBlock Text="{Binding Report.Paid}"
                                               HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Kind="Equal" 
                                                         Width="30"
                                                         Height="30"
                                                         Margin="50 0 50 0"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Tổng Cuối kì"></TextBlock>
                                <TextBlock Text="{Binding Report.Budget}"
                                               HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!--main content listview-->
        <Grid Grid.Row="2">
            <DataGrid
                            ItemsSource="{Binding ListSheet}"
                            ColumnWidth="*"
                            Margin="10 8 10 0"
                            CanUserSortColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 8 8">
                <DataGrid.Columns>
                    <!--Mã Phiếu-->
                    <DataGridTextColumn
                                    Binding="{Binding ProfitSummary.billCode}"
                                    Header="Mã Phiếu"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!--Loại Phiếu-->
                    <DataGridTextColumn
                                    Binding="{Binding ProfitSummary.billType}"
                                    Header="Loại Phiếu"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--Ngày ghi nhận -->
                    <DataGridTextColumn
                                    Binding="{Binding ProfitSummary.sellDay}"
                                    Header="Ngày ghi nhận"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--Mã chứng từ-->
                    <DataGridTextColumn
                                    Binding="{Binding MaChungTu}"
                                    Header="Mã Chứng Từ"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--Đối tượng-->
                    <DataGridTextColumn
                                    Binding="{Binding ProfitSummary.nameCustomer}"
                                    Header="Đối tượng"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--Hình thức thanh toán -->
                    <DataGridTextColumn
                                    Binding="{Binding ProfitSummary.payment}"
                                    Header="Hình Thức Thanh Toán"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--Tiền chi-->
                    <DataGridTextColumn
                                    Binding="{Binding ExportPrice}"
                                    Header="Tiền Chi"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--tiền thu -->
                    <DataGridTextColumn
                                    Binding="{Binding ImportPrice}"
                                    Header="Tiền Thu"
                                    Width="auto"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--qua trang-->
        <Grid Grid.Row="3"
                  Margin="0 0 10 0">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="btnNextPage">
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        <Setter Property="Padding" Value="0 0 0 0"></Setter>
                        <Setter Property="Background" Value="Transparent"></Setter>
                        <Setter Property="BorderBrush" Value="Black"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="FontSize" Value="9"></Setter>
                        <Setter Property="Height" Value="18"></Setter>
                        <Setter Property="Width" Value="18"></Setter>
                    </Style>
                </StackPanel.Resources>
                <ComboBox
                        Padding="0 0 0 0"
                        FontSize="9"
                        SelectedValue="10"
                        SelectedItem="10"
                        Text="1"
                        Height="22"
                        Width="30">
                </ComboBox>
                <TextBlock
                    Padding="10 0 10 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="items per page"></TextBlock>
                <Button
                    Content="1"
                    Background="AliceBlue"
                    Style="{StaticResource btnNextPage}">
                </Button>
                <Button
                    Content="2"
                    Margin="3 0 3 0"
                    Style="{StaticResource btnNextPage}">
                </Button>
                <Button
                    Content="3"
                    Style="{StaticResource btnNextPage}">
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
